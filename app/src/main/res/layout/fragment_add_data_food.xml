<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebe121">

    <TextView
        android:id="@+id/add_food_title"
        android:layout_width="393dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:text="DIET"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beefbar_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit1"
        app:layout_constraintBottom_toBottomOf="@+id/beefBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/beefBar"
        app:layout_constraintTop_toTopOf="@+id/beefBar" />

    <TextView
        android:id="@+id/textView_beef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/food_data_beef"
        app:layout_constraintBottom_toBottomOf="@+id/beefBar"
        app:layout_constraintEnd_toStartOf="@+id/beefBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/beefBar" />

    <TextView
        android:id="@+id/fishbar_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit1"
        app:layout_constraintBottom_toBottomOf="@+id/fishBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/fishBar"
        app:layout_constraintTop_toTopOf="@+id/fishBar" />

    <TextView
        android:id="@+id/textView_fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/food_data_fish"
        app:layout_constraintBottom_toBottomOf="@+id/fishBar"
        app:layout_constraintEnd_toStartOf="@+id/fishBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fishBar" />

    <TextView
        android:id="@+id/pork_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit1"
        app:layout_constraintBottom_toBottomOf="@+id/porkBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/porkBar"
        app:layout_constraintTop_toTopOf="@+id/porkBar" />

    <TextView
        android:id="@+id/textView_pork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/food_data_pork"
        app:layout_constraintBottom_toBottomOf="@+id/porkBar"
        app:layout_constraintEnd_toStartOf="@+id/porkBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/porkBar" />

    <TextView
        android:id="@+id/cheesebar_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit1"
        app:layout_constraintBottom_toBottomOf="@+id/cheeseBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/cheeseBar"
        app:layout_constraintTop_toTopOf="@+id/cheeseBar" />

    <TextView
        android:id="@+id/textView_cheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/food_data_cheese"
        app:layout_constraintBottom_toBottomOf="@+id/cheeseBar"
        app:layout_constraintEnd_toStartOf="@+id/cheeseBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cheeseBar" />

    <TextView
        android:id="@+id/dairybar_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit1"
        app:layout_constraintBottom_toBottomOf="@+id/dairyBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/dairyBar"
        app:layout_constraintTop_toTopOf="@+id/dairyBar" />

    <TextView
        android:id="@+id/textView_dairy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/food_data_dairy"
        app:layout_constraintBottom_toBottomOf="@+id/dairyBar"
        app:layout_constraintEnd_toStartOf="@+id/dairyBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dairyBar" />

    <TextView
        android:id="@+id/ricebar_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit1"
        app:layout_constraintBottom_toBottomOf="@+id/riceBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/riceBar"
        app:layout_constraintTop_toTopOf="@+id/riceBar" />

    <TextView
        android:id="@+id/textView_rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/food_data_rice"
        app:layout_constraintBottom_toBottomOf="@+id/riceBar"
        app:layout_constraintEnd_toStartOf="@+id/riceBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/riceBar"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/vegetablebar_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit1"
        app:layout_constraintBottom_toBottomOf="@+id/vegetableBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/vegetableBar"
        app:layout_constraintTop_toTopOf="@+id/vegetableBar" />

    <TextView
        android:id="@+id/textView_salad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="9"
        android:text="@string/food_data_vegetables"
        app:layout_constraintBottom_toBottomOf="@+id/vegetableBar"
        app:layout_constraintEnd_toStartOf="@+id/vegetableBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vegetableBar" />

    <TextView
        android:id="@+id/eggbar_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit2"
        app:layout_constraintBottom_toBottomOf="@+id/eggBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/eggBar"
        app:layout_constraintTop_toTopOf="@+id/eggBar" />

    <TextView
        android:id="@+id/textView_egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/food_data_eggs"
        app:layout_constraintBottom_toBottomOf="@+id/eggBar"
        app:layout_constraintEnd_toStartOf="@+id/eggBar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eggBar" />

    <EditText
        android:id="@+id/restaurant_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/submitFoodData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eggBar"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/restaurant_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_data_unit3"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_exp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/restaurant_exp"
        app:layout_constraintTop_toTopOf="@+id/restaurant_exp" />

    <Button
        android:id="@+id/submitFoodData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_data_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_exp"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/riceBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="20"
        android:progress="0"

        app:layout_constraintBottom_toTopOf="@+id/vegetableBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dairyBar"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/eggBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="0"

        app:layout_constraintBottom_toTopOf="@+id/restaurant_exp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vegetableBar"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/vegetableBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="0"


        app:layout_constraintBottom_toTopOf="@+id/eggBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riceBar"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/cheeseBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="6"
        android:progress="0"

        app:layout_constraintBottom_toTopOf="@+id/dairyBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fishBar"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/fishBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="70"
        android:progress="0"

        app:layout_constraintBottom_toTopOf="@+id/cheeseBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/porkBar"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/porkBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="70"
        android:progress="0"

        app:layout_constraintBottom_toTopOf="@+id/fishBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beefBar"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/beefBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="70"
        android:progress="0"

        app:layout_constraintBottom_toTopOf="@+id/porkBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2"
        app:layout_constraintWidth_percent="0.4" />

    <SeekBar
        android:id="@+id/dairyBar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:max="80"
        android:progress="0"

        app:layout_constraintBottom_toTopOf="@+id/riceBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cheeseBar"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="8"
        android:text="@string/food_data_restaurant"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_exp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_exp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/restaurant_exp" />

    <RadioGroup
        android:id="@+id/diet_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/checkBox2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_food_title">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioVegan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_btn1" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioVegetarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_btn2" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioOmnivore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_btn3" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:text="@string/food_data_low_carbon"
        app:layout_constraintBottom_toTopOf="@+id/beefBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_group" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_data_diet"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/diet_group"
        app:layout_constraintEnd_toStartOf="@+id/diet_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diet_group" />


</androidx.constraintlayout.widget.ConstraintLayout>