<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-106dp"
        tools:layout_editor_absoluteY="-325dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_food_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35sp"
                android:gravity="center"
                android:padding="16sp"
                android:text="@string/waste_title"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/totalWasteSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0." />

            <Spinner
                android:id="@+id/paperSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/plasticSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/glassSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/hazardousSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/electronicSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/glassSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/metalSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/paperSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/hazardousSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/metalSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/bioSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/cartonSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/cartonSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/electronicSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/plasticSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35sp"
                android:layout_marginBottom="860dp"
                android:entries="@array/waste_options1"
                app:layout_constraintBottom_toTopOf="@+id/submitWasteData"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.759"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/totalWasteSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:layout_marginBottom="40sp"
                android:entries="@array/waste_options2"
                app:layout_constraintBottom_toTopOf="@+id/textView16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.741"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitWasteData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_button_theme"
                android:padding="8sp"
                android:text="@string/submit_data_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/bioWaste"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/bioSpinner"
                app:layout_constraintEnd_toStartOf="@+id/bioSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bioSpinner" />

            <TextView
                android:id="@+id/textView102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/carton"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/cartonSpinner"
                app:layout_constraintEnd_toStartOf="@+id/cartonSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cartonSpinner" />

            <TextView
                android:id="@+id/textView103"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/electronic"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/electronicSpinner"
                app:layout_constraintEnd_toStartOf="@+id/electronicSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/electronicSpinner" />

            <TextView
                android:id="@+id/textView104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/glass"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/glassSpinner"
                app:layout_constraintEnd_toStartOf="@+id/glassSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/glassSpinner" />

            <TextView
                android:id="@+id/textView105"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/hazardous"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/hazardousSpinner"
                app:layout_constraintEnd_toStartOf="@+id/hazardousSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hazardousSpinner" />

            <TextView
                android:id="@+id/textView106"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/metal"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/metalSpinner"
                app:layout_constraintEnd_toStartOf="@+id/metalSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/metalSpinner" />

            <TextView
                android:id="@+id/textView107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/paper"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/paperSpinner"
                app:layout_constraintEnd_toStartOf="@+id/paperSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/paperSpinner" />

            <TextView
                android:id="@+id/textView108"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/plastic"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/plasticSpinner"
                app:layout_constraintEnd_toStartOf="@+id/plasticSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/plasticSpinner" />

            <TextView
                android:id="@+id/textView109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:ems="7"
                android:text="@string/total"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/totalWasteSpinner"
                app:layout_constraintEnd_toStartOf="@+id/totalWasteSpinner"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/totalWasteSpinner" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:gravity="center"
                android:padding="8sp"
                android:text="@string/waste_subtitle"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/bioSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="349dp"
                android:layout_height="53dp"

                android:layout_marginTop="20sp"
                android:layout_marginBottom="40dp"
                android:text="@string/waste_text"
                app:layout_constraintBottom_toTopOf="@+id/textView14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>